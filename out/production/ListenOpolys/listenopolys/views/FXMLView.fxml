<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="structure" prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listenopolys.controllers.FXMLController">
    <children>
        <GridPane id="menu" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="1" GridPane.rowSpan="2">
            <children>
                <ListView GridPane.rowIndex="0" fx:id="viewPlaylists" prefWidth="${viewPlaylists.parent.width}"/>
                <ListView GridPane.rowIndex="2" fx:id="viewTracks" prefWidth="${viewTracks.parent.width}"/>
            </children>
            <rowConstraints>
                <RowConstraints percentHeight="40"/>
                <RowConstraints percentHeight="10"/>
                <RowConstraints percentHeight="40"/>
                <RowConstraints percentHeight="10"/>
            </rowConstraints>
        </GridPane>

        <GridPane id="media" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
            </children>
        </GridPane>

        <GridPane id="player" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="Play" fx:id="buttonPlayPause" />
                <Button GridPane.columnIndex="1" GridPane.rowIndex="0" text="Stop" fx:id="buttonStop" />
            </children>
        </GridPane>
    </children>
    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="70"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="80"/>
        <RowConstraints percentHeight="20"/>
    </rowConstraints>
</GridPane>
