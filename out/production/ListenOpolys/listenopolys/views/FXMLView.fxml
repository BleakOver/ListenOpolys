<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane id="structure" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listenopolys.controllers.FXMLController">
    <children>
        <GridPane id="menu" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="2">
            <children>
                <ListView fx:id="viewPlaylists" onMouseClicked="#viewPlaylistsClicked" GridPane.rowIndex="0" />
                <ListView fx:id="viewTracks" onMouseClicked="#viewTracksClicked" GridPane.rowIndex="2" />
            </children>
            <columnConstraints>
                <ColumnConstraints percentWidth="100" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="40" />
                <RowConstraints percentHeight="10" />
                <RowConstraints percentHeight="40" />
                <RowConstraints percentHeight="10" />
            </rowConstraints>
        </GridPane>

        <GridPane id="media" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
            </children>
        </GridPane>

        <GridPane id="player" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Button fx:id="buttonPlayPause" onAction="#buttonPlayPauseClicked" text="Play" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="buttonStop" onAction="#buttonStopClicked" text="Stop" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
    <columnConstraints>
        <ColumnConstraints percentWidth="30" />
        <ColumnConstraints percentWidth="70" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="80" />
        <RowConstraints percentHeight="20" />
    </rowConstraints>
</GridPane>
